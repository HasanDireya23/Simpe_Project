@using System.Collections
@model IEnumerable<WebApplication6.Models.Product>

<div class="container">
    <h1 class="mb-4">Available Products</h1>
    <div class="mb-3">
        <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 product-card">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">Price: $@product.Price</p>
                        <p class="card-text">Quantity: @product.Quantity</p>
                        <p class="card-text">Company Email: @product.Company_Email</p>
                    </div>
                    <div class="card-footer text-center">
                        <div class="btn-group">
                            <a asp-controller="Product" asp-action="Edit" class="btn btn-outline-primary btn-sm">Edit</a>
                            <a asp-controller="Product" asp-action="Delete" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>